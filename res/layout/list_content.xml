<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical" android:background="@color/White" android:visibility="visible" android:animationCache="true">
    <QuickContactBadge android:layout_width="wrap_content" android:id="@+id/quickContactBadge1" android:layout_height="wrap_content" android:layout_marginRight="14dip" android:layout_marginLeft="3dip" android:onClick="@string/accountSpinnerLabel" android:layout_marginTop="8dip" android:src="@drawable/picturecont"></QuickContactBadge>
    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:id="@+id/postentry" android:layout_below="@+id/postview" android:layout_alignLeft="@+id/postview" android:layout_alignRight="@+id/postview" android:layout_toRightOf="@+id/postview" android:textSize="12px" android:textColor="#424242" android:gravity="right|center" android:drawableRight="@drawable/izq"></TextView>
    <TextView android:textStyle="bold" android:text="TextView" android:layout_width="fill_parent" android:textColor="@color/candidate_normal" android:textSize="20px" android:layout_height="wrap_content" android:id="@+id/name" android:layout_toRightOf="@+id/quickContactBadge1"></TextView>
    <TextView android:layout_below="@+id/name" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignLeft="@+id/name" android:text="Status" android:textColor="#848484" android:id="@+id/status"></TextView>
    <ImageView android:id="@+id/status_post" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/name" android:layout_toLeftOf="@+id/name" android:layout_marginTop="22dip"></ImageView>
    <TextView android:textStyle="normal" android:textSize="12px" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_below="@+id/name" android:layout_alignRight="@+id/name" android:layout_toRightOf="@+id/quickContactBadge1" android:layout_marginBottom="3dip" android:id="@+id/last_way" android:textColor="#088A4B" android:gravity="right" android:layout_marginRight="10dip" android:text=""></TextView>
    <TextView android:textSize="12px" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:id="@+id/postview" android:layout_below="@+id/last_way" android:layout_alignLeft="@+id/last_way" android:layout_alignRight="@+id/last_way" android:textColor="#585858" android:drawableLeft="@drawable/der"></TextView>
    <TextView android:textStyle="normal" android:layout_width="fill_parent" android:gravity="right" android:layout_marginBottom="3dip" android:textSize="12px" android:layout_height="wrap_content" android:layout_above="@+id/log" android:layout_alignLeft="@+id/log" android:layout_alignRight="@+id/log" android:textColor="#088A4B" android:id="@+id/last_zumb" android:layout_marginTop="5dip" android:layout_marginRight="10dip"></TextView>
    <ImageView android:id="@+id/ImageView01" android:layout_alignParentLeft="true" android:layout_below="@+id/quickContactBadge1" android:layout_marginLeft="10dip" android:layout_marginTop="10dip" android:layout_width="20dip" android:layout_height="20dip" android:background="@drawable/jabber_offline"></ImageView>
 
</RelativeLayout>