<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:theme="@android:style/Theme.Light"

	android:orientation="vertical"
	android:layout_width="match_parent" 
    android:layout_height="match_parent" android:background="@color/White">
    <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/relativeLayout1">
        <ImageView android:layout_height="wrap_content" android:src="@drawable/top_list" android:id="@+id/imageView2" android:layout_width="match_parent"></ImageView>
        <QuickContactBadge android:layout_height="wrap_content" android:src="@drawable/picturecont" android:layout_width="wrap_content" android:id="@+id/chatcontactbadge" android:layout_marginRight="10dip" android:layout_marginTop="5dip" android:layout_marginBottom="3dip" android:layout_marginLeft="5dip"></QuickContactBadge>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/chatnameview" android:textColor="@color/candidate_normal" android:textSize="20dip" android:textStyle="bold" android:layout_toRightOf="@+id/chatcontactbadge"></TextView>
    </RelativeLayout>
    <ListView android:id="@+id/listView1" android:layout_marginTop="95dip" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginBottom="50dip"></ListView>
    <Button android:layout_height="wrap_content" android:id="@+id/postbutton2" android:text="Post!" android:layout_width="wrap_content" android:cursorVisible="true" android:layout_toRightOf="@+id/terxtpost2" android:layout_below="@+id/listView1" android:layout_marginTop="-50dip"></Button>
    <EditText android:layout_height="wrap_content" android:inputType="textMultiLine" android:layout_width="wrap_content" android:id="@+id/terxtpost2" android:width="265dip" android:layout_below="@+id/listView1" android:layout_marginTop="-50dip"></EditText>
    
	    

</RelativeLayout>